<h1>Find a Place</h1>
@using(Html.BeginForm("FindResults", "Home", FormMethod.Post, new { id = "findForm" }))
{
    <div class="categoryItem">
        <div class="label">
            Type of Place
        </div>
        <div class="field">
            @Html.DropDownList("TypeID")
        </div>
    </div>
    <div class="categoryItem">
        <div class="label">
            Level of Diversity in Area
        </div>
        <div class="field">
            @Html.DropDownList("Diversity")
        </div>
    </div>
    <div class="categoryItem">
        <div class="label">
            Distance From Me
        </div>
        <div class="field">
            @Html.DropDownList("Distance")
        </div>
    </div>
    @*<div class="categoryItem">
        <div class="field">
            <a onclick="GetMyLocation()">Get My Location</a>
        </div>
    </div>*@
    <div class="categoryItem">
        <div class="field">
            <input type="submit" class="btn btn-default" value="Find"/>
        </div>
    </div>
}